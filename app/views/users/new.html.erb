<h1>Signup</h1>

<% if flash.keys.has? 'alert' %>
  <%= flash[:alert] %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br>

  <%= f.label :password %><br>
  <%= f.text_field :password %><br><br>

  <%= f.label :password_confirmation %><br>
  <%= f.text_field :password_confirmation %><br><br>

  <%= f.submit 'Signup'%>
<% end %>

<%= flash.inspect %>
